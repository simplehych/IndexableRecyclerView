<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<View
		android:id="@+id/spacing"
		android:layout_width="match_parent"
		android:layout_height="@dimen/spacing"
		android:background="@color/divide_line" />
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_item">
		
		<ImageView
			android:id="@+id/img"
			android:layout_width="@dimen/icon_w_h"
			android:layout_height="@dimen/icon_w_h"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/margin_l_r"
			android:src="@drawable/ogz_ic_member" />
		
		<TextView
			android:id="@+id/tv"
			style="@style/str"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/spacing"
			android:layout_toRightOf="@id/img" />
		
		<ImageView
			android:layout_width="@dimen/icon_w_h"
			android:layout_height="@dimen/icon_w_h"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/margin_l_r"
			android:src="@drawable/ogz_ic_nav_next" />
		
		<View
			android:id="@+id/divide"
			android:layout_width="match_parent"
			android:layout_height="@dimen/divide_line"
			android:layout_alignParentBottom="true"
			android:layout_marginLeft="@dimen/margin_l_r"
			android:layout_marginRight="@dimen/margin_l_r"
			android:background="@color/divide_line" />
	</RelativeLayout>

</LinearLayout>