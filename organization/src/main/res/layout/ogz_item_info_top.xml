<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground"
	android:paddingLeft="30dp"
	android:paddingTop="15dp"
	android:paddingRight="30dp"
	android:paddingBottom="15dp">
	
	<ImageView
		android:id="@+id/ogz_item_info_top_avatar"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_centerVertical="true"
		android:src="@drawable/ogz_ic_member" />
	
	<TextView
		android:id="@+id/ogz_item_info_top_name"
		style="@style/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="16dp"
		android:layout_toRightOf="@+id/ogz_item_info_top_avatar"
		android:text="姓名" />
	
	<View
		android:id="@+id/ogz_item_info_top_name_divide"
		android:layout_width="1dp"
		android:layout_height="18dp"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/spacing"
		android:layout_toRightOf="@+id/ogz_item_info_top_name"
		android:background="#D2D2D2" />
	
	<TextView
		android:id="@+id/ogz_item_info_top_gender"
		style="@style/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/spacing"
		android:layout_toRightOf="@+id/ogz_item_info_top_name_divide"
		android:text="性别"
		android:textColor="#888888" />

</RelativeLayout>