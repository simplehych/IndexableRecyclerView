<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/height_item_user"
	android:background="?attr/selectableItemBackground">
	
	<ImageView
		android:id="@+id/ogz_item_description_flag"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/margin_l_r"
		android:src="@drawable/ogz_ic_member" />
	
	<TextView
		android:id="@+id/ogz_item_description_title"
		style="@style/str"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/spacing"
		android:layout_toRightOf="@id/ogz_item_description_flag" />
	
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_alignParentBottom="true"
		android:background="@color/divide_line" />
</RelativeLayout>